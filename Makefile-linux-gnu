build/MOM6_SIS2_FMScap.$(PLATFORM).$(COMPILER).repro/MOM6_SIS2: build/MOM6.$(PLATFORM).$(COMPILER).repro/libMOM6.a
	mkdir -p build/MOM6_SIS2_FMScap.$(PLATFORM).$(COMPILER).repro
